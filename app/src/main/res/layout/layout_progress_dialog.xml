<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
     android:background="@drawable/bg_progress_dailog"
    android:layout_height="wrap_content"
    android:gravity="center" android:padding="20dp">

    <ImageView android:id="@+id/loading_iv" android:src="@mipmap/ic_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView  android:id="@+id/loading_tv" android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  android:textColor="#C5C5C5"  android:text="正在加载..."
        android:textSize="14sp"
        android:paddingTop="12dp" />

</LinearLayout>